@model Product
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/images/@Model.MainImg" alt="..." /></div>
            <div class="col-md-6">
                <div class="small mb-1">
                    @if (Model.Quantity == 0)
                    {
                        <span class="badge text-bg-danger">Quantity:@Model.Quantity</span>

                    }
                    else if (Model.Quantity <= 5)
                    {
                        <span class="badge text-bg-warning">Quantity:@Model.Quantity</span>

                    }
                    else
                    {
                        <span class="badge text-bg-primary">Quantity:@Model.Quantity</span>

                    }
                </div>
                <h1 class="display-5 fw-bolder">@Model.Name</h1>
                <h1 class="display-5 fw-bolder">@Model.Description</h1>
                <h1 class="display-5 fw-bolder">@Model.Rate</h1>
                <div class="fs-5 mb-5">
                    <span class="text-decoration-line-through">@Model.Price.ToString("c")</span>
                    <span> @((Model.Price - (Model.Discount / 100 * Model.Price)).ToString("c"))</span>
                </div>
                </div>
            </div>
        </div>
    </div>
</section>










