@model ResetPasswordVM
<div class="container">
    <div class="row mb-3">
        <div class="col-6 d-flex align-items-center">
            <div class="display-6 mb-0">Create Category</div>
        </div>
    </div>
    <div class="row"></div>
    <div class="col-12 m-3">
        <form method="post">
            <div class="text-bg-danger" asp-validation-summary="ModelOnly"></div>
            <div class="mb-3">
                <label for="OTP" class="form-label">OTP</label>
                <input class="form-control" asp-for="OTP">
                <span asp-validation-for="OTP" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div> 
            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">ConfirmPassword</label>
                <input class="form-control" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
<div />
@section Scripts
{

    <partial name="_ValidationScriptsPartial">
 

    @if (TempData["Notification"] is not null)
    {
        <script>

            toastr.success('@TempData["Notification"]')

        </script>
    } 
    @if (TempData["NotificationError"] is not null)
    {
        <script>

            toastr.error('@TempData["NotificationError"]')

        </script>
    }


}

